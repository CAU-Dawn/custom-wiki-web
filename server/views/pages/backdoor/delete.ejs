<!DOCTYPE HTML>

<html>
<head>
    <title><%= title %></title>
    <%include ../../partials/stylesheet %>
    <% include ../../partials/ck %>
</head>
<body>
    <% include ../../partials/nav_backdoor %>
    <div class="container">
        <div class="page-header">
            <h1><a class="text-dark" href="/backdoor/delete">Delete Page</a></h1>
        </div>
        <div >
            <div >
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>Number</th>
                        <th>Title</th>
                        <th>password</th>
                        <th>Delete</th>
                    </tr>
                </thead>
                <tbody>
                <%if(contents.length>0){%>
                <%contents.forEach(function(item){%>
                <tr>
                    <td class="number"><%=item.number%></td>
                    <td class="title"><a href="/show?id=<%=item.title%>"><%=item.title%></a></td>
                    <td class="password"><%=item.password%></td>
                    <td class="delete"><button id="delete" class="btn btn-light" type="button" onclick="del('<%= item.title %>')">Delete</button></td>
                </tr>
                <%})%>
                <%} else {%>
                <tr>
                    <td colspan="5">게시물이 없습니다.</td>
                </tr>
                <%}%>
                </tbody>
            </table>
            </div>
            <nav aria-label="Page navigation example">
                <ul class="pagination justify-content-center">
                    <%
                    for(var i=1; i<=pagination; i++){
                    %>
                    <li class="page-item"><a class="page-link" href="/backdoor/delete?page=<%=i%>"><%=i%></a></li>
                     <%}%>
                </ul>
            </nav>
        </div>
    </div>

    <% include ../../partials/footer %>
    <% include ../../partials/javascript %>

    <script>
        var del = function(path){
            if(confirm("Are u sure?") == true){
                $.ajax({    
                    url: '/delete',
                    type: 'post',
                    data: {"title": path, "path":path},
                    dataType: 'JSON',
                    async:false,
                    success: function(result)
                    {
                        console.log(result);
                        if ( result.status == 1 ) {
                            alert("Delete Complete.");
                            location.replace("/backdoor/delete");
                        } 
                    }
                })
            }
        }
    </script>
</body>
</html>
